{
  "compilerOptions": {
    "target": "es6",
    "inlineSources": true,
    "inlineSourceMap": true,
    "strict": true,
    "module": "esnext",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
